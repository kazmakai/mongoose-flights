<%- include('../partials/header') %>

<form id="new-form" action="/flights" method="post">
    <label>Airline:
        <select name="airline">
            <option value="" selected disabled>Choose an Airline</option>
            <option value="Qatar Airways">Qatar Airways</option>
            <option value="Singapore Airlines">Singapore Airlines</option>
            <option value="Emirates">Emirates</option>
            <option value="Air Asia">Air Asia</option>
            <option value="Etihad Airways">Etihad Airways</option>
        </select>
    </label>

    <label>Airport:
        <select name="airport">
            <option value="DEN" selected>DEN</option>
            <option value="JFK">JFK</option>
            <option value="SIN">SIN</option>
            <option value="NRT">NRT</option>
            <option value="HND">HND</option>
        </select>
    </label>

    <label>Flight Number:
        <input name="flightNumber" type="number" required>
    </label>

    <label>Departure Date:
        <input 
            type="datetime-local"
            name="departs"
            value="<%= departsDate %>" 
            required
            >
    </label>

    <button id="add-flight-button" type="submit">Add Flight</button>

</form>

<%- include('../partials/footer') %>