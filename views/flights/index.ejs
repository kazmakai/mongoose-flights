<%- include('../partials/header') %>

<h2>Flight List</h2>
 <table>
   <thead>
     <tr>
       <th>Airline</th>
       <th>Airport</th>
       <th>Flight Number</th>
       <th>Departure Date</th>
     </tr>
   </thead>
   <tbody>
     <!-- Write the line of EJS to iterate over movies using forEach right below -->
     <% flights.forEach(function(f) { %>
       <tr class="<%= f.departs < new Date() ? 'red-text' : '' %>">
         <td><%= f.airline %></td>
         <td><%= f.airport %></td>
         <td><%= f.flightNumber %></td>
         <td><%= f.departs.toISOString().slice(0, 10) %></td>
       </tr>
     <!-- Close the forEach using EJS right below -->
     <% }) %>
   </tbody>
 </table>

<%- include('../partials/footer') %>